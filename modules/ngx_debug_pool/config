CORE_DEPS="$CORE_DEPS $ngx_addon_dir/ngx_palloc.h"
CORE_INCS="-I $ngx_addon_dir $CORE_INCS"

CORE_SRCS=`echo "$CORE_SRCS" | sed "s/[^ \n\t]*ngx_palloc.c//g"`
